{
  "train_batch_size": 512,  // Adjust based on global batch size requirements
  "gradient_accumulation_steps": 2,  // If needed to increase effective batch size
  "fp16": {
    "enabled": false  // Enable mixed precision training
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.001,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 1e-2
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 1000
    }
  },
  "zero_optimization": {
    "stage": 1,  // Zero Redundancy Optimizer stage
    "reduce_bucket_size": 5e8
  }
}
